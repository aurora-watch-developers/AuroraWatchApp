<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">

    </style>

    <style name="AWTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="OrangeBackground" parent="AWTextView">
        <item name="android:background">#ff9504</item>
    </style>

    <style name="OrangeText" parent="AWTextView">
        <item name="android:textColor">#ff9504</item>
    </style>



</resources>
